{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    {
        "type": "lldb",
        "request": "launch",
        "name": "Launch",
        "program": "${workspaceFolder}/chamber/scripts/chamber.mjs",
        "console": "integratedTerminal",
        "args": [],
        "cwd": "${workspaceFolder}"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Run and Debug JS",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "program": "${workspaceFolder}/chamber/scripts/chamber.mjs"
    },
    {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Frontend JS in Chrome",
         "file": "${workspaceFolder}/index.html",
        "webRoot": "${workspaceFolder}"
    }
    ]
}